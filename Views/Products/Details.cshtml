@model Gummi.Models.Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@Html.DisplayFor(model => model.Name)</h3>

<h5>Price: $@Html.DisplayFor(model => model.Price)/Bag *</h5>
<h5>Origin: @Html.DisplayFor(model => model.Origin)</h5>

<p>*Bag contains 100 Gummi Bears</p>
<hr />

<h4>@Html.ActionLink("Edit Product", "Edit", new { id = Model.ProductId })</h4>
<h4>@Html.ActionLink("Remove Product", "Delete", new { id = Model.ProductId })</h4>

<hr/>
<p>@Html.ActionLink("Back to Product List", "Index")</p>

